        <TextBlock HorizontalAlignment="Left" Margin="100,236,0,0" TextWrapping="Wrap" Text="Edad" VerticalAlignment="Top"/>
        <TextBox Tag="Nombre" HorizontalAlignment="Left" Height="23" Margin="100,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyUp="TextBox_KeyUp"/>
        <TextBox Tag="Apellido" HorizontalAlignment="Left" Height="23" Margin="100,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyUp="TextBox_KeyUp"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
